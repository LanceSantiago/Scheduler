{
    "compileOnSave": true,
    "compilerOptions": {
      "module": "commonjs",
      "strict": true,
      "outDir": "build",
      "sourceMap": true,
      "removeComments": true,
      "experimentalDecorators": true,
      "target": "es6",
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "exclude": [
      "client/"
    ],
    "include": [
      "server/"
    ]
  }